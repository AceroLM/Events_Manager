@model Events.Models.User_Model


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header" filter-color="orange">
    <div class="page-header-image" style=""></div>
    <div class="container">
        <div class="col-md-4 content-center">
            <div class="card card-login card-plain">

                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @Class = "form" }))
                {
                    <div class="header header-primary text-center">
                        <div class="logo-container">
                            <img src="~/Content/Img/now-ui-kit/now-logo.png" alt="">
                        </div>
                    </div>
                        <div class="content">
                            <div class="input-group form-group-no-border input-lg">
                                <span class="input-group-addon">
                                    <i class="now-ui-icons users_circle-08"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="E-mail" name="Email">
                            </div>
                            <div class="input-group form-group-no-border input-lg">
                                <span class="input-group-addon">
                                    <i class="now-ui-icons text_caps-small"></i>
                                </span>
                                <input type="password" placeholder="Contraseña" class="form-control" name="Password" />
                            </div>
                        </div>
                        <div class="footer text-center">
                            <input type="submit" class="btn btn-primary btn-round btn-lg btn-block" value="Login">
                        </div>
                        <div class="pull-left">
                            <h6>
                                <a href="~/Home/Sign_up" class="link" target="_blank">Crear Cuenta</a>
                            </h6>
                        </div>

                }


            </div>
        </div>
    </div>
    <footer class="footer"></footer>
</div>

